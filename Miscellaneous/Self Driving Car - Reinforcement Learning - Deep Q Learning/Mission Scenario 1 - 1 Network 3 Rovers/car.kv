<Car>:
    size: 20, 10
    canvas:
        PushMatrix
        Color:
            rgba: 0,0,1,1
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
        PopMatrix
   
